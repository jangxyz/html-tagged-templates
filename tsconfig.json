{
  // node_modules/@tsconfig/recommended/tsconfig.json
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    //
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  "include": ["./src/**.ts"],
  "exclude": ["./src/**.test.ts", "./node_modules/**"]
}
